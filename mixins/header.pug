include ./top-nav
include ./version-picker

mixin header(title, intro)
    - title = title || SITE_TITLE
    header.t-header-layout.u-flex-none.u-margin-bottom-xl.u-background-neutral-10.u-small-shadow
        +top-nav
        div.c-contain
            div.c-search-sheet.u-small-shadow-inset
                span.u-visually-hidden Search Sheet
            div.t-header-layout__content.u-flexbox.u-align-center.u-context
                div.u-flex
                    h1.c-heading.c--h1 #{title}
                    if intro
                        p.u-margin-top-sm.u-neutral-50 #{intro}
                div.t-header-layout__search.u-flex-none.js-search-input.u-hidden--for-phone-only.u-hidden--for-tablet-only
                    div.c-search-box
                        gcse:searchbox-only

            +versionPicker
